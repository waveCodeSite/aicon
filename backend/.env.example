# 数据库配置
DATABASE_URL=postgresql+asyncpg://aicg_user:aicg_password@localhost:5432/aicg_db

# Redis配置
REDIS_URL=redis://localhost:6379/0

# MinIO配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET_NAME=aicg-files

# JWT配置
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API配置
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# 日志配置
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=4

# 开发模式
DEBUG=true
ENVIRONMENT=development

# 文件上传配置
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=["txt", "md", "docx", "epub"]

# 视频生成配置
MAX_CONCURRENT_GENERATIONS=10
DEFAULT_VIDEO_STYLE=cinematic
DEFAULT_VOICE_TYPE=female_gentle
DEFAULT_BACKGROUND_MUSIC=true

# 监控配置
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# OpenTelemetry配置
OTEL_SERVICE_NAME=aicg-backend
OTEL_RESOURCE_ATTRIBUTES=service.version=1.0.0

# 安全配置
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=1800  # 30分钟

# 缓存配置
CACHE_TTL=3600  # 1小时
CACHE_MAX_SIZE=1000

# API限流配置
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10